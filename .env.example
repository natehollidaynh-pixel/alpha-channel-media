# Database
# Railway provides this automatically when you add PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secret - use a long random string (minimum 32 characters)
# Generate one: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# Master Admin Password - used to access the master admin dashboard
MASTER_PASSWORD=your-strong-master-password

# Resend Email API Key - get from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx

# From Email - must be verified in Resend, or use the test domain
# Use 'onboarding@resend.dev' for testing, or your verified domain
FROM_EMAIL=Alpha Channel Media <onboarding@resend.dev>

# Cloudinary - for persistent file storage (audio, video, images)
# Sign up free at https://cloudinary.com - find these in your Dashboard
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your-api-secret

# App URL - Railway provides this as your deployment URL
# For local development, keep as localhost
APP_URL=http://localhost:3000

# Node Environment - Railway sets this to 'production' automatically
NODE_ENV=development

# Port - Railway sets this automatically
PORT=3000
